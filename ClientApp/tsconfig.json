{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "skipLibCheck": true, // This is for temporary solution of https://github.com/OfficeDev/office-ui-fabric-react/issues/6104
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "webpack-env"
    ]
  },
  "exclude": [
    "bin",
    "node_modules"
  ]
}